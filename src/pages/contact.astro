---
import Layout from '../layouts/layout.astro';
---

<Layout title="Contact | Mon Site Minimaliste">
  <section class="max-w-2xl mx-auto">
    <h1 class="mb-12">Contact</h1>
    
    <p class="text-lg mb-10">
      N'hésitez pas à me contacter pour toute demande d'information.
    </p>
    
    <form class="mb-20 space-y-8">
      <div>
        <label for="name" class="block mb-2">Nom</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          class="w-full border-b border-black pb-2 focus:outline-none bg-transparent"
        />
      </div>
      
      <div>
        <label for="email" class="block mb-2">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          class="w-full border-b border-black pb-2 focus:outline-none bg-transparent"
        />
      </div>
      
      <div>
        <label for="message" class="block mb-2">Message</label>
        <textarea 
          id="message" 
          name="message" 
          rows="5" 
          class="w-full border-b border-black pb-2 focus:outline-none bg-transparent"
        ></textarea>
      </div>
      
      <button type="submit" class="btn">
        Envoyer
      </button>
    </form>
    
    <div class="mb-32">
      <a href="/" class="border-b border-black pb-0.5 hover:opacity-70 transition-opacity">
        ← Retour à l'accueil
      </a>
    </div>
  </section>
</Layout>